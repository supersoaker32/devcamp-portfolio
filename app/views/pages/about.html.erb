<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>
    
    <hr>
    
    <div class="row">
      <div class="col-md-5">
         <%= image_tag "profile_picture.jpg", width: 300, alt: "profile image", class: 'profile-img' %>
         
         <div class="skills">
           <% @skills.each do |skill| %>
           <div class="skill">
             <h4><%= skill.title %></h4>
             <div class="progress">
               <div 
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%"
                ></div>
               </div>
             </div>
           <% end %>
         </div>
      </div>
      
      <div class="col-md-7">
        <p>I am a student that enjoys learning new information and playing Magic the Gathering, I work hard and efficiently.</p>
        
        <p>
          <button 
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controller="jobHistory"
          >
            Job History
          </button>
          
          <button 
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
          >
            Education
          </button>
        </p>
        
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Job1
            </div>
            <div class="card card-block">
              Job2
            </div>
          </div>
          
          <div class="collapse" id="education">
            <div class="card card-block">
              School1
            </div>
            <div class="card card-block">
              School2
            </div>
            <div class="card card-block">
              School3
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
